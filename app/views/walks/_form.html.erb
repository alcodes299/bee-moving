<div class="form">


<%= form_for @walk do |f| %>
<% if @bob %>
<ul>
  <% @bob.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
<div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :location %>
  <%= f.text_field :location %>
</div>
<div class="field">
  <%= f.label :description %>
  <%= f.text_field :description %>
</div>
<div class="field">
  <%= f.hidden_field :user_id, :value => @user.id %>
</div>
<div class="submit">
  <%= f.submit "Add a Walk", {:class => "button", :id => "zeroM"} %>
</div>
<% end %>
</div>
